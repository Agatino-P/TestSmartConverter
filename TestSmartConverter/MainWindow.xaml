<Window x:Class="TestSmartConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TestSmartConverter"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="800" Height="450" mc:Ignorable="d">
    <Window.Resources>
        <local:SmartCaseConverter x:Key="scConv" ConverterCase="Lower" />
    </Window.Resources>
    <StackPanel>
        <TextBox x:Name="txt" Text="TRUE" />
        <TextBlock Text="{Binding Path=Text, ElementName=txt, Converter={StaticResource scConv}}" />
    </StackPanel>
</Window>
